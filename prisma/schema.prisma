generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             String           @id @default(uuid())
  name           String
  login          String
  password       String
  PassCollection PassCollection[]
  Session        Session[]
  // Config         Config[]
  // Issue          Issue[]
  // IssueComent    IssueComment[]
  Role           Role?            @relation(fields: [roleId], references: [id])
  roleId         String?
}

model PassCollection {
  id     String @id @default(uuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String
  name   String
  data   String
}

model Session {
  id      String @id @default(uuid())
  user    User   @relation(fields: [userId], references: [id])
  userId  String
  tokenId String
}

