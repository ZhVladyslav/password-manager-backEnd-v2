model Role {
  id    String  @id @default(uuid())
  name  String
  Claim Claim[]
  User  User[]
}

model Claim {
  id     String @id @default(uuid())
  name   String
  Role   Role   @relation(fields: [roleId], references: [id])
  roleId String
}
