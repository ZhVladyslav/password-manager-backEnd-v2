// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             String           @id @default(uuid())
  name           String
  login          String
  password       String
  role           String
  PassCollection PassCollection[]
  Session        Session[]
  Config         Config[]
  Issue          Issue[]
  IssueComent    IssueComment[]
}

model PassCollection {
  id     String @id @default(uuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String
  name   String
  data   String
}

model Session {
  id      String @id @default(uuid())
  user    User   @relation(fields: [userId], references: [id])
  userId  String
  tokenId String
}

model Config {
  id     String @id @default(uuid())
  name   String
  user   User   @relation(fields: [userId], references: [id])
  userId String
  them   String
}

model Issue {
  id           String         @id @default(uuid())
  user         User?          @relation(fields: [userId], references: [id])
  userId       String?
  title        String
  description  String
  fixed        Boolean        @default(false)
  data         DateTime       @default(now())
  IssueComment IssueComment[]
}

model IssueComment {
  id      String   @id @default(uuid())
  Issue   Issue    @relation(fields: [issueId], references: [id])
  issueId String
  user    User?    @relation(fields: [userId], references: [id])
  userId  String?
  data    DateTime @default(now())
  comment String
}
