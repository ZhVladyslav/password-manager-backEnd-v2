// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             String           @id @default(uuid())
  name           String
  login          String           @unique
  password       String
  roleId         String?
  createDate     DateTime         @default(now())
  PassCollection PassCollection[]
  Session        Session[]
  Role           Role?            @relation(fields: [roleId], references: [id])
}

model PassCollection {
  id          String   @id @default(uuid())
  userId      String
  version     String
  name        String
  encryptData String
  createDate  DateTime @default(now())
  lastUpdate  DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
}

model Session {
  id         String   @id @default(uuid())
  userId     String
  tokenId    String
  createDate DateTime @default(now())
  expDate    DateTime
  user       User     @relation(fields: [userId], references: [id])
}

model Role {
  id             String   @id @default(uuid())
  name_en        String
  name_ua        String
  name_ru        String
  description_en String
  description_ua String
  description_ru String
  createDate     DateTime @default(now())
  lastUpdate     DateTime @updatedAt
  Claim          Claim[]
  User           User[]
}

model Claim {
  id             String   @id @default(uuid())
  roleId         String
  claim          String
  name_en        String
  name_ua        String
  name_ru        String
  description_en String
  description_ua String
  description_ru String
  createDate     DateTime @default(now())
  Role           Role     @relation(fields: [roleId], references: [id])
}

model Error {
  id         String   @id @default(uuid())
  name       String
  route      String
  status     Boolean
  createDate DateTime @default(now())
}
